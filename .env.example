# Backend environment example (do not commit real secrets)

# MongoDB connection (compose default)
MONGO_URI=mongodb://mongo:27017/chatfleet

# Disable dev auto-start in containers
AUTO_START_MONGO=0
MONGO_BIN=mongod
MONGO_CONFIG_PATH=
MONGO_DB_PATH=/var/lib/chatfleet/mongo
MONGO_STARTUP_TIMEOUT_S=20

# Auth
JWT_SECRET=please-change-me-to-a-random-32char-secret

# Models
CHAT_MODEL=gpt-4o-mini
EMBED_MODEL=text-embedding-3-small

# Storage
INDEX_DIR=/var/lib/chatfleet/faiss
UPLOAD_DIR=/var/lib/chatfleet/uploads
MAX_UPLOAD_MB=50

# API behavior
SSE_HEARTBEAT_MS=15000
TOP_K_DEFAULT=6
TEMPERATURE_DEFAULT=0.2

# CORS (unused when behind Caddy on same origin)
CORS_ORIGINS=

# Optional
# OPENAI_API_KEY=
